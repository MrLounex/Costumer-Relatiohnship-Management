<h3>Edit Profile</h3>

<form action="/profile" method="post" class="card p-3 shadow-sm w-50" enctype="multipart/form-data">
  <div class="mb-3 text-center">
    <img src="<%= user.photo %>" class="rounded-circle mb-3" width="120" height="120" alt="Profile Photo">
    <div><small class="text-muted">Current photo</small></div>
  </div>

  <div class="mb-3">
    <label class="form-label">Change Photo (optional)</label>
    <input type="file" name="photo" class="form-control" accept="image/*">
  </div>

  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" name="name" class="form-control" value="<%= user.name %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Email</label>
    <input type="email" name="email" class="form-control" value="<%= user.email %>">
  </div>

  <button class="btn btn-primary">Save profile</button>
</form>
