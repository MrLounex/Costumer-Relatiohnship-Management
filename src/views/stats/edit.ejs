<h3>Edit Statistics</h3>

<form action="/stats" method="post" class="card p-3 shadow-sm w-50">
  <div class="mb-3">
    <label class="form-label">Total Contacts</label>
    <input type="number" name="contacts" class="form-control" value="<%= stats.contacts %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Deals</label>
    <input type="number" name="deals" class="form-control" value="<%= stats.deals %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Tasks</label>
    <input type="number" name="tasks" class="form-control" value="<%= stats.tasks %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Revenue (IDR)</label>
    <input type="number" name="revenue" class="form-control" value="<%= stats.revenue %>">
    <div class="form-text">Masukkan angka tanpa titik/koma, contohnya: 85000000</div>
  </div>

  <button class="btn btn-primary">Save stats</button>
</form>
