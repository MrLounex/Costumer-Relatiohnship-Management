<h3 class="mb-3">Ringkasan</h3>
<p class="text-muted">Sekilas tentang kegiatan dan keuangan.</p>

<div class="row g-3">
  <div class="col-md-3">
    <div class="card p-3 shadow-sm text-center">
      <h6>Daftar Orang</h6>
      <h4><%= stats.contacts %></h4>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card p-3 shadow-sm text-center">
      <h6>Catatan / Proyek</h6>
      <h4><%= stats.deals %></h4>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card p-3 shadow-sm text-center">
      <h6>To-Do</h6>
      <h4><%= stats.tasks %></h4>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card p-3 shadow-sm text-center">
      <h6>Pendapatan</h6>
      <h4>Rp <%= Number(stats.revenue).toLocaleString("id-ID") %></h4>
    </div>
  </div>
</div>

<div class="row g-3 mt-3">
  <div class="col-md-6">
    <div class="card p-3 shadow-sm">
      <div class="d-flex justify-content-between align-items-center">
        <h6>Tren Pendapatan (Rp)</h6>
        <a href="/stats" class="btn btn-sm btn-outline-secondary">Edit statistik</a>
      </div>
      <div style="height:240px;">
        <canvas id="revenueChart" style="max-height:220px; width:100%"></canvas>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card p-3 shadow-sm">
      <h6>Catatan berdasarkan status</h6>
      <div style="height:240px;">
        <canvas id="dealsChart" style="max-height:220px; width:100%"></canvas>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const revenueData = <%- JSON.stringify(stats.revenueTrend) %>;
  const dealsData = <%- JSON.stringify(stats.dealsStage) %>;
  const tasksData = <%- JSON.stringify(stats.tasksStatus) %>;

  new Chart(document.getElementById("revenueChart"), {
    type: "line",
    data: {
      labels: ["Jan","Feb","Mar","Apr","May","Jun","Jul"],
      datasets: [{
        label: "Pendapatan (Rp)",
        data: revenueData,
        borderColor: "#4f46e5",
        backgroundColor: "rgba(79,70,229,0.08)",
        fill: true,
        tension: 0.3
      }]
    },
    options: {
      responsive: true, maintainAspectRatio: false,
      plugins: { tooltip: { callbacks: { label: function(ctx){ return 'Rp ' + Number(ctx.raw).toLocaleString('id-ID') } } } }
    }
  });

  new Chart(document.getElementById("dealsChart"), {
    type: "doughnut",
    data: { labels: ["Tahap A","Tahap B","Tahap C"], datasets: [{ data: dealsData, backgroundColor: ["#f59e0b","#3b82f6","#10b981"] }] },
    options: { responsive: true, maintainAspectRatio: false }
  });
</script>
