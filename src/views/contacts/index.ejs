<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><i class="bi bi-people"></i> Daftar Kontak</h2>
  <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addContactModal">
    + Tambah Kontak
  </a>
</div>

<!-- Tombol Export & Print -->
<div class="mb-3">
  <a href="/contacts/export/excel" class="btn btn-success">Export Excel</a>
  <a href="/contacts/export/csv" class="btn btn-primary">Export CSV</a>
</div>

<!-- Tabel Kontak -->
<div class="card shadow-sm">
  <div class="card-body">
    <table class="table table-hover">
      <thead class="table-light">
        <tr>
          <th>Nama</th>
          <th>Email</th>
          <th>Perusahaan</th>
          <th>Telepon</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center">Belum ada kontak</td>
          </tr>
        <% } else { %>
          <% contacts.forEach(c => { %>
            <tr>
              <td><%= c.name %></td>
              <td><%= c.email %></td>
              <td><%= c.company %></td>
              <td><%= c.phone %></td>
              <td>
                <form method="POST" action="/contacts/delete/<%= c.id %>" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- Modal Tambah Kontak -->
<div class="modal fade" id="addContactModal" tabindex="-1" aria-labelledby="addContactLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form method="POST" action="/contacts/add" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addContactLabel">Tambah Kontak Baru</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Nama</label>
          <input type="text" name="name" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Perusahaan</label>
          <input type="text" name="company" class="form-control">
        </div>
        <div class="mb-3">
          <label class="form-label">Telepon</label>
          <input type="text" name="phone" class="form-control">
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Simpan</button>
      </div>
    </form>
  </div>
</div>
