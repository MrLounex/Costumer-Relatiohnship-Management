<h3>Catatan / Proyek</h3>
<p class="text-muted">Daftar proyek & catatan. Tampilannya read-only.</p>

<div class="row g-3">
  <% if (deals && deals.length) { %>
    <% deals.forEach(d => { %>
      <div class="col-md-4">
        <div class="card p-3 shadow-sm h-100">
          <h6><%= d.title %></h6>
          <p class="mb-1"><strong>Perusahaan:</strong> <%= d.company %></p>
          <p class="mb-1"><strong>Nilai:</strong> Rp <%= Number(d.value).toLocaleString("id-ID") %></p>
          <p class="mb-1"><strong>Status:</strong> <%= d.status %></p>
          <p class="text-muted small mb-0">ID: <%= d.id %></p>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-12">
      <div class="alert alert-secondary">Belum ada catatan.</div>
    </div>
  <% } %>
</div>
